<?xml version='1.0' encoding='utf-8'?>
<widget id="io.bridgeprotocol.bridgepassport" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bridge Passport</name>
    <description>
        App to allow users to create, manage, and use their Bridge Passport on the Bridge Protocol Network
    </description>
    <author email="dev@bridgeprotocol.io" href="https://www.bridgeprotocol.io">
        Bridge Protocol Corporation
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
